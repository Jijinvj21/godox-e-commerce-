    .iti--allow-dropdown{
  width: 100%;
    }
  </style>
  <body >
    <%- include('../partials/user-header')%>
    <div class="container-fluid " style= "text-shadow: 3px 3px #ffffff8e;background-color:#dddddd; font: bolder; font-family: 'Bebas Neue', cursive; font-size: 500;  letter-spacing: 10px;" >
        <div class="row my-5 py-5">
          <h1 class="text-center">Add Address</h1>
        </div>
       </div>
    
    <div class="container" style="min-height: 60.3vh;">
        <div class="row">
            <div class="col-lg-3 my-3 d-flex flex-column align-items-center" >
                <div class="card" style="width: 18rem; border-radius: 15px;
                background: #ffffff;
                box-shadow:  10px 10px 20px #5a5a5a81,
             -10px -10px 20px #ffffff;" >
                    <ul class="list-group list-group-flush " style="border-radius: 15px;">
                      <li class="list-group-item"><a href="/viewuserdata"  style="text-decoration: none; color: black ;">Profile</a> </li>
                      <li class="list-group-item"><a href="/displayaddress"  style="text-decoration: none; color: black ;">Address</a> </li>
                      <li class="list-group-item"><a href="/displayorder"  style="text-decoration: none; color: black ;">Order</a> </li>
                      <li class="list-group-item"><a href="/logout"  style="text-decoration: none; color: black ;">LOGOUT</a> </li>

                    </ul>
                  </div>
            </div>

            <div class="col-lg-9 mb-5" style="border-radius: 25px;
            background: #ffffff;
            box-shadow:  20px 20px 47px #5a5a5ada,
                         -20px -20px 47px #ffffff;">
          <form action="/addadderss" method="post">
      
                    <h5 class="fw-normal my-3 py-3" style="letter-spacing: 1px;">Add your address</h5>
  
                    <div class="form-outline  mb-4">
                      <input type="text"  name="name" id="form2Example17" required class="form-control form-control-lg" />
                      <label class="form-label"  name="email" for="form2Example17">Your Name</label>
                    </div>
  
                    <div class="form-outline mb-4">
                      <!-- <input name="tel" type="tel" id="form2Example27" required class="form-control form-control-lg" /> -->

                      <input  class="form-control form-control-lg "   type="tel" id="phone" name="phone" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" required  />


                      <label class="form-label" name="password" for="form2Example27">Phone Number</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="text"  name="pincode" id="form2Example17" required class="form-control form-control-lg" />
                        <label class="form-label"  name="email" for="form2Example17">Pincode</label>
                      </div>
    
                      <div class="form-outline mb-4">
                        <input type="text"  name="address"id="form2Example27"  required class="form-control form-control-lg" />
                        <label class="form-label" name="password" for="form2Example27">Enter your  address</label>
                      </div>
  
                    <div class="pt-1 mb-4">
                      <button class="btn btn-dark btn-lg btn-block " type="submit" style="width: 100%;">Save change</button>
                    </div>
                  </form>
                </div>
        </div>
    </div>
    <%- include('../partials/user-footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
 
 
 
 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"
    integrity="sha512-+gShyB8GWoOiXNwOlBaYXdLTiZt10Iy6xjACGadpqMs20aJOoh+PJt3bwUVA6Cefe7yF7vblX6QwyXZiVwTWGg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script>
    var input = document.querySelector("#phone");
    var iti = window.intlTelInput(input);

    var form = document.querySelector("form");
    form.addEventListener("submit", function (e) {
      e.preventDefault();
      var dialCode = iti.getSelectedCountryData().dialCode;
      input.value = dialCode + input.value;
           form.submit(); 
    });

  </script>
 
 
 
 
  </body>
</html>
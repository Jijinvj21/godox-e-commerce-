<%- include('../partials/user-header')%>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<title> document</title>
	<meta content="" name="description">
	<meta content="Author" name="MJ Maraz">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&family=Poppins:wght@300;400;500;600&family=Raleway:wght@300;400;500;600&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
	
	<!-- ============== Plugin CSS Files ============== -->
	<link rel="stylesheet" href="/public/zoomassets/css/bootstrap.min.css">
	<link rel="stylesheet" href="/public/zoomassets/css/fontawesome.css">
	<link rel="stylesheet" href="/public/zoomassets/css/xzoom.min.css">
	<link rel="stylesheet" href="/public/zoomassets/css/style.css">
</head>
<!-- ============================= Design & Develop By = MJ MARAZ   =================================== -->

<body>
	
	

	<!-- >>>>>>>>>  Header  = (Start) >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
	
	<!-- <<<<<<<<<  Header  = (End) <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<< -->
	<!-- ==========  X Zoom  = (Start) ======================================================= -->
	<section class="xzoom_part">
		<div class="container">
			<% for (let i = 0; i < productimg.length ; i++) { %>
			<div class="row">
				<div class="col-md-6 col-sm-12">
					
					<div class="xzoom_container" >
						<img src="/public/databaseimg/<%=productimg[i].image[0]%>" alt="" class="xzoom" id="xzoom-default"  >
						<div class="xzoom-thumbs" >
							<a href="/public/databaseimg/<%=productimg[i].image[0]%>" >
								<img src="/public/databaseimg/<%=productimg[i].image[0]%>" alt="" class="xzoom-gallery" width="80" xpreview="/public/databaseimg/<%=productimg[i].image[0]%>">
							</a>
							<a href="/public/databaseimg/<%=productimg[i].image[1]%>">
								<img src="/public/databaseimg/<%=productimg[i].image[1]%>" alt="" class="xzoom-gallery" width="80">
							</a>
							<a href="/public/databaseimg/<%=productimg[i].image[2]%>">
								<img src="/public/databaseimg/<%=productimg[i].image[2]%>" alt="" class="xzoom-gallery" width="80">
							</a>
							
						</div>
					</div>
					
				</div>
				
				<div class="col-md-6 col-sm-12">
					<div class="xzoom_details">
						<h2 ><%=productimg[i].name%></h2>
						<h4 class="mt-3"> $<%=productimg[i].price%> </h4>
						<h5 class="mt-2"> PRODUCT DETAILS </h5>
						<h6><%=productimg[i].description%></h6>
						<a href="/cartpage?%>productid=<%=productimg[i]._id%>" class="btn"> Add To Cart </a>
						<a href="/wishlistdat?productId=<%=productimg[i]._id%>" class="btn"> Add to wishlist </a>
					</div>
				</div>
			</div>

			
			<% } %>
		</div>
			
	</section>
	<div class="container-fluid">
		<div class="row" style="height: 11.1vh;">

		</div>
		</div>

	<div class="container-fluid">
		<div class="dummybox" style="height: 101px;">

		</div>
		<div class="row">
			<%- include('../partials/user-footer')%>
		</div>
		</div>

		
	
	<!-- ==========  X Zoom  = (End) ======================================================= -->
	<!-- ======================================================= -->
	<script src="/public/zoomassets/js/jquery-3.6.0.min.js"></script>
	<script src="/public/zoomassets/js/bootstrap.bundle.min.js"></script>
	<script src="/public/zoomassets/js/xzoom.min.js"></script>
	<!-- ======================================================== -->
</body>

</html>
